{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "target": "es2020",
    "lib": ["es2018", "dom"],
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "downlevelIteration": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "commonjs"
  },
  "exclude": ["bin", "node_modules"]
}
